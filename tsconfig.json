{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "types": ["vitest/globals", "node"],
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "component/**/*.ts",
    "tests/**/*.ts",
    "vitest.config.ts",
    "types/**/*.d.ts"
  ]
}
